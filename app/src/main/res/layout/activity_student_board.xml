<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textAlignment="center"
        android:textSize="40dp"
        android:fontFamily="cursive"
        android:textColor="@color/purple_200"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal" />

    <ImageView
        android:layout_width="178dp"
        android:layout_height="157dp"
        android:background="@drawable/assignment">

    </ImageView>

    <Button
        android:id="@+id/btnAssignment"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="15dp"
        android:background="@color/purple_200"
        android:text="Submit Assignment" />

    <ImageView
        android:layout_width="175dp"
        android:layout_height="116dp"
        android:background="@drawable/results">

    </ImageView>

    <Button
        android:id="@+id/btnResult"
        android:layout_width="190dp"
        android:layout_height="36dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="15dp"
        android:background="@color/purple_200"
        android:text="View Result" />

    <ImageView
        android:layout_width="175dp"
        android:layout_height="117dp"
        android:background="@drawable/announcements">

    </ImageView>

    <Button
        android:id="@+id/btnAnnouncement"
        android:layout_width="188dp"
        android:layout_height="36dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="15dp"
        android:background="@color/purple_200"
        android:text="Announcements" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="188dp"
        android:layout_height="34.5dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="5dp"
        android:background="@color/purple_200"
        android:text="LogOut" />


</LinearLayout>