<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:flow_verticalAlign="center"
    android:background="@color/common_google_signin_btn_text_dark_default"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="100dp"
        android:background="@drawable/brand" />

    <ImageButton
        android:id="@+id/iStudent"
        android:layout_width="197dp"
        android:layout_height="172dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/student" />

    <TextView
        android:id="@+id/tvStudent"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:textColor="@color/design_default_color_secondary_variant"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textSize="20sp"
        android:text="STUDENT" />

    <ImageButton
        android:id="@+id/iTeacher"
        android:layout_width="196dp"
        android:layout_height="143dp"
        android:layout_marginLeft="100dp"
        app:srcCompat="@drawable/teacher" />

    <TextView
        android:id="@+id/tvTeacher"
        android:layout_width="match_parent"
        android:textColor="@color/design_default_color_secondary_variant"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="TEACHER" />

    <ImageButton
        android:id="@+id/iParent"
        android:layout_width="202dp"
        android:layout_height="180dp"
        android:layout_marginLeft="100dp"
        app:srcCompat="@drawable/parents" />

    <TextView
        android:id="@+id/tvParent"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/design_default_color_secondary_variant"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="PARENT" />

</LinearLayout>