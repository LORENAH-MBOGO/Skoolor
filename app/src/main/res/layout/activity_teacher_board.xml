<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="40dp"
        android:fontFamily="cursive"
        android:textColor="@color/purple_200"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:text="" />

    <ImageView
        android:layout_width="185dp"
        android:layout_height="115dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/announcements">

    </ImageView>

    <Button
        android:id="@+id/btnAnnouncement"
        android:layout_width="188dp"
        android:layout_height="36dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="25dp"
        android:background="@color/purple_200"
        android:text="Announcements" />
    <ImageView
        android:layout_width="185dp"
        android:layout_height="115dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/results">

    </ImageView>

    <Button
        android:id="@+id/btnResults"
        android:layout_width="188dp"
        android:layout_height="36dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="25dp"
        android:background="@color/purple_200"
        android:text="Student Results" />

    <ImageView
        android:layout_width="186dp"
        android:layout_height="115dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/meet">

    </ImageView>

    <Button
        android:id="@+id/btnParent"
        android:layout_width="188dp"
        android:layout_height="36dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="10dp"
        android:background="@color/purple_200"
        android:text="Parents Meeting" />


    <Button
        android:id="@+id/btnLogout"
        android:layout_width="188dp"
        android:layout_height="35dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="25dp"
        android:background="@color/purple_200"
        android:text="LogOut" />


</LinearLayout>