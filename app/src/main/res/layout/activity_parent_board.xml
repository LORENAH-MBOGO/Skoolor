<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="67.5dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="cursive"
        android:gravity="center_horizontal"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/purple_200"
        android:textSize="30dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnInq"
        android:layout_width="258dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:background="@color/purple_200"
        android:text="Inquiry/Feedback" />

    <ImageView
        android:layout_width="252dp"
        android:layout_height="122dp"
        android:background="@drawable/results">

    </ImageView>

    <Button
        android:id="@+id/btnResult"
        android:layout_width="258dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/purple_200"
        android:text="View Student Results" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="104dp"
        android:background="@drawable/meet">

    </ImageView>

    <Button
        android:id="@+id/btnMeeting"
        android:layout_width="260dp"
        android:layout_height="43dp"
        android:layout_marginTop="20dp"
        android:background="@color/purple_200"
        android:text="Meetings" />


    <Button
        android:id="@+id/btnLogout"
        android:layout_width="260dp"
        android:layout_height="43dp"
        android:layout_marginTop="20dp"
        android:background="@color/purple_200"
        android:text="Logout" />

</LinearLayout>